{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "./src",
        "paths": {
            "@assets": ["./assets"],
            "@database": ["./database"],
            "@domain": ["./domain"],
            "@models": ["./models"],
            "@layouts": ["./layouts"],
            "@utils": ["./utils"],
            "@common": ["./common"],
            "@services": ["./services"],
            "@queries": ["./graphql/queries"],
            "@helpers": ["./helpers"],
            "@mutations": ["./graphql/mutations"],
            "@types": ["./types"],
            "@hooks": ["./hooks"],
            "@components": ["./components"],
            "@validators": ["./validators"],
            "@store": ["./store"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
